{
    "root": true,
    "extends": "eslint:recommended",
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "allowReturnOutsideFunction": true,
        "allowImportExportEverywhere": true,
        "ecmaVersion": 2018,
        "sourceType": "module",
        "requireConfigFile": false,
        "ecmaFeatures": {
            "modules": true,
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "es6": true,
        "jquery": true,
        "node": true
    },
    "ignorePatterns": ["config.js", "**.*.js", "config/*"]
}
